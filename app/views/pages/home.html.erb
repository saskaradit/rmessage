<h4 class="ui center aligned icon header">
  <i class="circular inverted teal users icon"></i>
  Friends
</h4>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid card chatbox">
      <div class="content">
        <div class="ui feed">
          <%= render @messages%>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html:{class: "ui reply form", role: "form"}, url: message_path) do |f|%>
          <div class="field">
            <div class="ui primary fluid input icon">
              <%= f.text_field :body, placeholder:"Send a message..."%>
              <%= f.button '<i class="bordered inverted teal edit icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
